<%- model_class = Topic -%>
<script type="text/javascript">
    $(document).ready(function () {
      $(".hide-answer").hide();
        $(".see-answer").click(function(){
          $(".hide-answer").show();
          $(".see-answer").hide();
          $(this).next('div').removeClass('invisible');
        });
        $(".hide-answer").click(function(){
          $(".see-answer").show();
          $(".hide-answer").hide();
          $(".see-answer").next('div').addClass("invisible")
        });
    });

</script>


<div class="page-header alert alert-success">
  <h4><%= @chapter.book.name %><%= " " %><%= @chapter.book.grade %><%= " " %>
    <i class='icon-double-angle-right icon-white'></i><%= " " %><%= @chapter.name %><%= " " %>
    <i class='icon-double-angle-right icon-white'></i><%= " " %><%= "MCQs Questions" %></h4>
</div>
<% index = 1 %>
<% number = 1 %>
<%= form_for @chapter, :url => '#', :html => {:class => 'form-horizontal'} do |f| %>
  <%= f.fields_for :questions, @questions do |q| %>
    <ul>
        <%= "Question#" %><%= index %><%= " " %>
        <strong><%= q.object.name %></strong>
        <% q.object.options.each do |option| %>
            <div class="controls row-fluid">
              <div class="span1"><%= number %><%= ":" %></div>
              <%= q.label "#{option.mcq}" %>
            </div>
            <% number = number + 1 %>
        <% end %>

        <div class='btn btn-primary hide-answer'>Hide Answer</div>
        <div class='btn btn-primary see-answer'>Check Answer</div>
        <div id="getanswer" class="invisible">
         <strong><%= "Answer:" %></strong><div class="label_color"><%= q.object.answer.ans %></div>
        </div>
        <% number = 1 %>
        <% index = index + 1 %>
    </ul><br/>
    <div class="form-actions">
      <%= link_to "Go Back", chapter_questions_path(@chapter), :class => 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>


